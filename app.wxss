@import "/lib/colorui/main.wxss";
@import "/lib/colorui/icon.wxss";

.container {
  min-height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  font-weight: normal;
} 

.page-body{
  width: 100%;
  
}

.col-center-flex{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.row-center-flex{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

/* ====================input==================== */
.input-placeholder{
  color: #bbbbbb;
}

/* ====================button==================== */
button{
  background-color: #63AEFF;
  border-radius: 10rpx;
  color: #fff;
  text-align: center;
  font-size: 34rpx;
  height: 88rpx;
  line-height: 88rpx;
  min-height: 88rpx;
  padding: 0;
  box-sizing: border-box;
}

button[disabled]{
  background-color: rgba(99, 174, 255, 0.5) !important;
  color: rgba(255, 255, 255, 0.6) !important;
  border-width: 0;
  text-align: center;
}

button::after{
  border: 0px
}

.btn-area{
  margin-top: 30rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  width: 100%;
}


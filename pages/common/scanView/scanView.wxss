/* pages/common/scanView/scanView.wxss */

page{
  background-color: #000;
}

.page-body{
  position: relative;
}

camera{
  width: 100%;
  height: 100vh;
}

.mask{
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100vh;
}

.mask-top{
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: calc((100vh - (100vw - 80px))/2);
  background-color: #000;
  opacity:0.4;
  filter:alpha(opacity=40);
}

.mask-left{
  position: absolute;
  top: calc((100vh - (100vw - 80px))/2);
  left: 0px;
  width: 40px;
  height: calc(100vw - 80px);
  background-color: #000;
  opacity:0.4;
  filter:alpha(opacity=40);
}

.mask-right{
  position: absolute;
  top: calc((100vh - (100vw - 80px))/2);
  right: 0px;
  width: 40px;
  height: calc(100vw - 80px);
  background-color: #000;
  opacity:0.4;
  filter:alpha(opacity=40);
}

.mask-botm{
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: calc((100vh - (100vw - 80px))/2);
  background-color: #000;
  opacity:0.4;
  filter:alpha(opacity=40);
}

.scan-leftup{
  width: 30px;
  height: 30px;
  position: absolute;
  top: calc((100vh - (100vw - 80px))/2);
  left: 40px;
}

.scan-rightup{
  width: 30px;
  height: 30px;
  position: absolute;
  top: calc((100vh - (100vw - 80px))/2);
  right: 40px;
}

.scan-leftdown{
  width: 30px;
  height: 30px;
  position: absolute;
  bottom: calc((100vh - (100vw - 80px))/2);
  left: 40px;
}

.scan-rightdown{
  width: 30px;
  height: 30px;
  position: absolute;
  bottom: calc((100vh - (100vw - 80px))/2);
  right: 40px;
}

.scan-line{
  width: calc(100vw - 80px);
  height: 2px;
  position: absolute;
  top: calc((100vh - (100vw - 80px))/2);
  left: 40px;
}
/* pages/common/scanView/scanView.wxss */

page{
  background-color: #000;
}

.page-body{
  position: relative;
}

camera{
  width: 100%;
  height: 100vh;
}

.mask{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100vh;
}

.mask-top{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: calc((100vh - (100vw - 160rpx))/2);
  background-color: #000;
  opacity:0.4;
  filter:alpha(opacity=40);
}

.mask-left{
  position: absolute;
  top: calc((100vh - (100vw - 160rpx))/2);
  left: 0px;
  width: 80rpx;
  height: calc(100vw - 160rpx);
  background-color: #000;
  opacity:0.4;
  filter:alpha(opacity=40);
}

.mask-right{
  position: absolute;
  top: calc((100vh - (100vw - 160rpx))/2);
  right: 0px;
  width: 80rpx;
  height: calc(100vw - 160rpx);
  background-color: #000;
  opacity:0.4;
  filter:alpha(opacity=40);
}

.mask-botm{
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: calc((100vh - (100vw - 160rpx))/2);
  background-color: #000;
  opacity:0.4;
  filter:alpha(opacity=40);
}

.scan-leftup{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: calc((100vh - (100vw - 160rpx))/2);
  left: 80rpx;
}

.scan-rightup{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: calc((100vh - (100vw - 160rpx))/2);
  right: 80rpx;
}

.scan-leftdown{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  bottom: calc((100vh - (100vw - 160rpx))/2);
  left: 80rpx;
}

.scan-rightdown{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  bottom: calc((100vh - (100vw - 160rpx))/2);
  right: 80rpx;
}

.scan-line{
  width: calc(100vw - 160rpx);
  height: 4rpx;
  position: absolute;
  top: calc((100vh - (100vw - 160rpx))/2);
  left: 80rpx;
}
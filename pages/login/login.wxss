/* pages/login/login.wxss */
page{
  background-color: #fff
}

.page-body{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box
}

.logo-bg{
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40px 0px 80px 0px;
}

.logo{
  width: 150rpx;
  height: 150rpx;
}

.login-list{
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: center;
  height: 45px;
  line-height: 45px;
  margin-bottom: 15px;
}

.login-input{
  font-size: 18px;
  width: 100%
}

.phone-icon{
  height: 26px;
  width: 19px;
  min-height: 26px;
  min-width: 19px;
  margin-right: 10px;
}

.psd-icon{
  height: 24px;
  width: 21px;
  min-height: 24px;
  min-width: 21px;
  margin-right: 10px;
}

.see-psd-bg{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 45px;
  width: 30px;
  min-height: 45px;
  min-width: 30px;
}


.btn-area{
  padding: 0rpx;
  margin-top: 80rpx;
}

button{
  border-radius: 22px;
}
